import random
answers = ['Бесспорно','Предрешено','Никаких сомнений','Определённо да','Можешь быть уверен в этом','Мне кажется - да','Вероятнее всего','Хорошие перспективы','Знаки говорят - да','Да','Пока неясно, попробуй снова','Спроси позже','Лучше не рассказывать','Сейчас нельзя предсказать','Сконцентрируйся и спроси опять','Даже не думай','Мой ответ - нет','По моим данным - нет','Перспективы не очень хорошие','Весьма сомнительно']
print('Привет Мир, я магический шар, и я знаю ответ на любой твой вопрос.')
print('Как тебя зовут?')
name = input()  
zero = 0                                # Ноль для бесконечного цикла 
print('Привет', name)
def answer_to_question():               # Функция ответа на вопрос
    print('Задай любой вопрос')
    question = input()
    while zero < 10:
        print(random.choice(answers))
        break
print(answer_to_question())
def yes_no():                           # Функция уточнения второго вопроса
    print('Нужно ответить ещё на вопрос?')
    ans_yes_no = input()
    while zero < 10:
        if ans_yes_no == 'Да' or ans_yes_no == 'да':
            print(answer_to_question())
            print(yes_no())
            break
        elif ans_yes_no == 'Нет' or ans_yes_no == 'нет':
            print('Возвращайся, если возникнут вопросы!')
            break
        else:
            print('Не понял, скажи Да или Нет')
            print(yes_no())
            break
print(yes_no())
